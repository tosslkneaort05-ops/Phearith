        <h1>á›áŸ’á”áŸ‚á„á‘á¶á™ á›áŸáááŸ’á–áŸáŸ‹/á‘á¶á”</h1>
        <p>á–á·á“áŸ’á‘á»ášá”áŸáŸ‹á¢áŸ’á“á€: <span id="balance" style="color:red; font-weight:bold;">1000</span> $</p>
        
        <h3>áá¾á›áŸáá”á“áŸ’á‘á¶á”áŸ‹ á“á¹á„á’áŸ†á‡á¶á„ á¬áá¼á…á‡á¶á„ 5?</h3>
        <button class="btn" onclick="play('low')">á‘á¶á”á‡á¶á„ 5</button>
        <button class="btn" onclick="play('high')">ááŸ’á–áŸáŸ‹á‡á¶á„ 5</button>

        <div id="result"></div>
    </div>

    <script>
        let balance = 1000;
        let betAmount = 100; 

        function play(userChoice) {
            let randomNumber = Math.floor(Math.random() * 11);
            let message = "";
            let color = "black";

            let isWin = false;
            if (userChoice === 'low' && randomNumber < 5) isWin = true;
            else if (userChoice === 'high' && randomNumber > 5) isWin = true;

            if (isWin) {
                balance += betAmount; 
                message = `ğŸ‰ áˆáŸ’á“áŸ‡! á›áŸáá…áŸá‰: ${randomNumber}. á–á·á“áŸ’á‘á»á“áŸ…áŸá›áŸ‹: ${balance}$`;
                color = "green";
            } else {
                balance -= betAmount; 
                message = `âŒ á…á¶á‰áŸ‹! á›áŸáá…áŸá‰: ${randomNumber}. á–á·á“áŸ’á‘á»á“áŸ…áŸá›áŸ‹: ${balance}$`;
                color = "red";
            }

            let resultDiv = document.getElementById("result");
            resultDiv.innerText = message;
            resultDiv.style.color = color;
            document.getElementById("balance").innerText = balance;
        }
    </script>
